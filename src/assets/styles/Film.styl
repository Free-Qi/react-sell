.film
  width 1200px
  margin 80px auto
.film_left
  width 840px
  display inline-block
.film_right
  width 285px
  display inline-block
  float right
.film_header
  width 840px
  height 40px
  border-bottom  1px solid #CCCCCC
.film_header>h3
  display block
  float left
  font-size 30px
  cursor pointer
  color #B2B2B2
.film_header>h3>span
  color #B2B2B2
.spanred
  color black!important
.film_order
  float right
.film_order>ul>li
  list-style none
  display inline-block
  line-height 40px
  font-size 14px
  margin-left 12px
  cursor pointer
  color #808080
.film_body
  width 840px
  padding 20px 0
.film_body li
  list-style none
.film_body>ul>li
  width 840px
  height 300px
  display block
  border-bottom 1px solid #E5E5E5
.film_img>img
  width 180px
  height 250px
.film_img
  width 180px
  height 250px
  float left
  display inline-block
  margin-top 20px
.film_text
  float left
  width 500px
  margin-top 30px
  margin-left 20px
.film_text>h4
  display inline-block
  font-size 22px
  margin-right 20px
.film_text>p
  display inline-block
  color #F0764F
  font-size 20px
  margin-right 20px
.film_text>span
  display inline-block
  color #808080
  font-size 16px
.film_text>ul>li>label
  color #333333
  font-size 10px
.film_text>ul>li
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  width 480px
.film_text>ul>li>span
  color #808080
  font-size 10px
  width 480px
.film_text>ul
  margin-top 30px
.film_tags
  margin-top 30px
.film_tags>span
  border 1px solid #36bfd1
  border-radius 20px
  padding 0 20px 0 20px
  height 35px
  display inline-block
  text-align center
  line-height 35px
  color #36bfd1
  margin-right 10px
  text-overflow: ellipsis;
.film_btn
  width 120px
  height 45px
  cursor pointer
  background-color #EF6630
  margin-top 100px
  border-radius 20px
  border 0
  outline none
  float right
  font-size 16px
  color #ffffff
.film_page
  width 840px
  height 36px
  text-align center
  padding 10px
.film_page>div
  display: inline-block
.film_page_pre
  font-size 16px
  color #808080
  cursor pointer
  display inline-block
  margin-right 20px
.film_page_next
  font-size 16px
  color #808080
  cursor pointer
  display inline-block
  margin-left 10px
.film_page>div>ul>li
  list-style none
  width 26px
  height 26px
  background-color #b2b2b2
  line-height 26px
  border-radius 100%
  cursor pointer
  text-align center
  display inline-block
  margin-right 10px
.film_page>div>ul>li:hover
  background-color #5CBBCE
.lired
  background-color #5CBBCE!important
.orderLiRed
  color #63BFD1!important