*
  margin 0
  padding 0
  box-sizing border-box
#twopagefilm-body
  width 100%
  height 2000px
  border 5px dashed red
.clearboth
  font-size 0.00001px
  opacity 0.000001
  clear both
.twopage-container
  width 1200px
  height 100%
  margin auto
  position relative
#twopagefilm-bigimg
  width 99%
  margin auto
  height 520px
  background-color rgb(30,30,30)
  position relative
#twopagefilm-bigimg>img
  width 100%
  height 100%
#twopage-talk
  width 100%
  height 380px
  position absolute
  top -50px
  z-index 1
  margin-bottom 20px
.place
  width 100%
  height 330px
  margin-bottom 20px
#twopage-talk-img
  width 275px
  height 375px
  border 5px solid white
  text-align center
  line-height 375px
  vertical-align middle
  float left
#twopage-talk-img img
  width 265px
  height 365px
  margin auto
#twopage-talk-right
  width 900px
  height 375px
  float right
  position relative
#twopage-talk-right-top
  width 100%
  height 35px
  padding-top 5px
  margin-bottom 15px

#twopage-talk-right-top span
  border 1px solid white
  border-radius 45px
  padding 7px
  margin-right 25px
  font-size 12px
  color white
  text-align center
#twopage-talk-right-title
  width 100%
  height 85px
  border-bottom 1px dashed gainsboro
  display inline-block
  vertical-align middle
.filmName
  color black
  font-size 45px
  font-weight bolder
  margin-right 25px
.scroll
  color red
  font-size 30px
  vertical-align middle
  margin-right 25px
.intro
  color rgb(109,109,109)
  font-size 22px
  vertical-align middle
#twopage-talk-right-body
  width 100%
  height 215px
  font-size 10px
.label
  color black
  margin-right 10px
.needspan
  color darkgray
  margin-right 20px
#twopage-talk-right-body-two
  width 850px
  overflow hidden
  position relative
  height 30px
  display inline-block
#more
  color red
  font-size 10px
  display inline-block
  cursor pointer
.upi
  color red
  font-size 10px
  cursor pointer
#twopage-talk-right-body-three
  width 100%
  height 100px
.actor
  display inline-block
  width 80px
  height 95px
  text-align center
  margin-right 20px
  vertical-align middle
  cursor pointer
.actor span
  display block
  margin auto
  cursor pointer
.actor-img
  width 45px
  height 45px
  border-radius 50%
  margin auto
  vertical-align middle
.actor-img img
  width 100%
  height 100%
  border-radius 50%
#moveimg-view
  width 100%
  height 122px
  position relative
  overflow hidden
  border 1px solid red
#moveimg-move
  height 100%
  //transition all 0.3s
  width 4800px
  position absolute
.moveimg-one
  width 110px
  height 110px
  margin 5px
  display inline-block
  cursor pointer
.moveimg-one img
  width 100%
  height 100%
#goleft
  width 50px
  height 50px
  position absolute
  top 40px
  left 5px
  border-radius 50%
  border 2px solid white
  cursor pointer
  z-index 2
#goright
  width 50px
  height 50px
  position absolute
  top 40px
  right 5px
  border-radius 50%
  border 2px solid white
  cursor pointer
  z-index 2
#goleft img, #goright img
  width 100%
  height 100%




