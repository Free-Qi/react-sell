  color black

#movie-theatre-copy
  width 1200px
  height 700px
  margin auto
  margin-top 10px
  border 10px solid rgb(229,229,229)
  border-radius 14px

#movie-theatre-big
  width 1100px
  height 20px
  margin auto
  margin-top 20px

// 电影照片
#movie-theatre-picture
  border 1px solid aqua
  display inline-block
  width 200px
  height 280px
  vertical-align top

