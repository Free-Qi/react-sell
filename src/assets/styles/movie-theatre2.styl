  width 1200px
  margin auto
  border 1px solid palegoldenrod
  margin-bottom 100px
  margin-top 20px

#movie-theatre-data
  font-size 12px

#movie-theatre-data>p
  margin-top 20px
  display inline-block

#movie-theatre-data>div
  font-size 12px
  margin-left 15px
  display inline-block
  text-align center
  line-height 32px
  width 120px
  height 32px
  border-radius 18px

#movie-theatre-data1
